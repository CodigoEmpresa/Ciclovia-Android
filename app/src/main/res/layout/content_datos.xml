<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="250dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.gov.idrd.ciclovia.Datos"
    tools:showIn="@layout/activity_datos">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="36dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digita tu nombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             />

        <EditText
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:inputType="textPersonName"
            android:maxWidth="@android:dimen/notification_large_icon_width" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escoge tu sexo"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <Spinner
            android:id="@+id/sexo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fab_size_mini"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:minWidth="70dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de nacimiento"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <EditText
            android:id="@+id/fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:focusableInTouchMode="false"
            android:hint="yyyy/mm/dd"
            android:inputType="none"
            android:onClick="showTimePickerDialog" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digita tu altura"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            />

        <EditText
            android:id="@+id/altura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="cms"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digita tu peso"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
             />

        <EditText
            android:id="@+id/peso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:ems="10"
            android:hint="Kg"
            android:inputType="number" />

        <Button
            android:id="@+id/guardar"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fab_size_normal"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary"
            android:text="Guardar"
            android:textColor="@android:color/white"
            tools:text="Guardar" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
